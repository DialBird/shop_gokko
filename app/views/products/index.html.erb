<% content_for(:title) do%>商品一覧<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>画像</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td class="col-sm-2"><%= product.name %></td>
      <td class="col-sm-2"><%= product.price %></td>
      <td class="col-sm-4"><%= image_tag product.image.url, size: '100x100' %></td>
      <td class="col-sm-6">
        <%= form_tag populate_cart_path, class: 'form-horizontal', method: :put do %>
          <div class="input-group pull-right add-cart-input">
            <%= number_field_tag 'quantity', 1, class: 'form-control', min: 1 %>
            <div class="input-group-btn">
              <%= hidden_field_tag 'product_id', product.id %>
              <%= submit_tag 'Add to Cart', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
