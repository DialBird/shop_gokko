<header class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Shop Gokko', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to '買い物する', products_path %></li>
          <li class="dropdown">
            <%= link_to '#', class: 'dropdown-toggle', data: { toggle: "dropdown" } do %>
              アカウント <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li id="link-to-cart"></li>
              <script>$(function(){ShopGokko.fetch_cart('<%= cart_link_path %>');})</script>
              <li>
                <%= link_to 'ログアウト', destroy_user_session_path,
                                          method: :delete,
                                          data: { confirm: 'ログアウトしてもよろしいでしょうか？' } %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
