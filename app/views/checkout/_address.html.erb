<div class="col-sm-6">
  <div class="form-group">
    <%= f.label :postal_code, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.text_field :postal_code, placeholder: '1234567', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.text_field :address, placeholder: '住所', class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-12 text-center">
    <%= f.submit '確認画面へ', name: 'confirm', class: 'btn btn-primary' %>
  </div>
</div>
