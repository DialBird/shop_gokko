<%= devise_error_messages! %>
<div class="panel panel-default" style="width:500px;margin:0 auto;">
  <div class="panel-body">
    <h2 class="text-center">Sign Up</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-12 text-center">
        <%= link_to 'Back', new_user_session_path, class: 'btn btn-default' %>
        <%= f.submit "Sign Up", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
